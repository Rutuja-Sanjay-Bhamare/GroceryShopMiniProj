@{
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<GroceryShopMiniProjNew.Models.GroceryProduct>

@{
    ViewData["Title"] = "Product";
}

<h1><b><i style="color:#FFFFFF">Product-DashBorad</i></b></h1>


<a asp-action="Login" class="btn btn-info" asp-controller="Login">LOGIN</a>
<br />
<BR />
<table class="table" style="background-color:darkslateblue" width="100px">
    <thead>
        <tr style="background-color:darkslateblue">
            <th style="color:#FFFFFF">
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th style="color:#FFFFFF">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th style="color:#FFFFFF">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th style="color:#FFFFFF">
                @Html.DisplayNameFor(model => model.ProductQuantityKg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:#FFFFFF">
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td style="color:#FFFFFF">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td style="color:#FFFFFF">
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td style="color:#FFFFFF">
                    @Html.DisplayFor(modelItem => item.ProductQuantityKg)
                </td>

            </tr>
        }
    </tbody>
</table>
